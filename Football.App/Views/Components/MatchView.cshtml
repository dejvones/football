@model IEnumerable<IGrouping<DateTime,Football.App.ViewModels.MatchViewModel>>

@if (Model != null && Model.Any())
{
    @foreach(var group in Model)
    {
        <div class="d-flex align-items-center">
            <div class="flex-grow-1 border-top"></div>
            <h5 class="m-0 p-2">@group.Key.ToShortDateString()</h5>
            <div class="flex-grow-1 border-top"></div>
        </div>
        @foreach(var match in group){
            <div class="card card-hover mb-3 mt-1">
                <div class="d-flex flex-column flex-sm-row align-items-center justify-content-center text-center">
                    <h5 class="col-sm-5 col-12 p-2 mx-2">@match.Team1Player1Name + @match.Team1Player2Name</h5>
                    <h5 class="m-0">
                        <span class="@(match.Score1 > match.Score2 ? "text-success fw-bold" : "text-danger")">@match.Score1</span> :
                        <span class="@(match.Score2 > match.Score1 ? "text-success fw-bold" : "text-danger")">@match.Score2</span>
                    </h5>
                    <h5 class="col-sm-5 col-12 p-2 mx-2">@match.Team2Player1Name + @match.Team2Player2Name</h5>
                </div>
            </div>
        }
    }
}
else
{
    <p>No matches available.</p>
}

<style>
    .card-hover:hover {
        background-color: #343a40; /* Nearly black */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s, box-shadow 0.3s; /* Smooth transition */
    }
</style>