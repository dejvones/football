@model Football.App.Models.MatchViewModel

@{
    ViewData["Title"] = "Add Match";
}

<h1>Add Match</h1>

<form asp-action="AddMatch" method="post">
    <div class="form-group">
        <label asp-for="Player1Id" class="control-label">Player 1 (Team 1)</label>
        <select asp-for="Player1Id" class="form-control" asp-items="@(new SelectList(Model.AllPlayers, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Player2Id" class="control-label">Player 2 (Team 1)</label>
        <select asp-for="Player2Id" class="form-control" asp-items="@(new SelectList(Model.AllPlayers, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Player3Id" class="control-label">Player 1 (Team 2)</label>
        <select asp-for="Player3Id" class="form-control" asp-items="@(new SelectList(Model.AllPlayers, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Player4Id" class="control-label">Player 2 (Team 2)</label>
        <select asp-for="Player4Id" class="form-control" asp-items="@(new SelectList(Model.AllPlayers, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Score1" class="control-label">Score (Team 1)</label>
        <input asp-for="Score1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Score2" class="control-label">Score (Team 2)</label>
        <input asp-for="Score2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Date</label>
        <input asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add Match" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}