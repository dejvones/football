@model Football.App.Models.PlayerViewModel

@{
    ViewData["Title"] = "Add Player";
}

<h1>Add Player</h1>

<form asp-action="AddPlayer" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control w-50" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Player" class="btn btn-primary mt-3" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}