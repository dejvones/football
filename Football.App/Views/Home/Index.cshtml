@model IEnumerable<Football.Data.Models.LeagueModel>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Leagues</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var league in Model)
        {
            <tr>
                <td>@league.Name</td>
                <td>@league.Start.ToShortDateString()</td>
                <td>@league.End.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
